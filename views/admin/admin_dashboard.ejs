<div>
    <h3>
        Hello, <%= userData.username %>
    </h3>
    <a href="/admin/edit-profile/page">Edit profile</a>
</div>

<div class="admin-title">
    <h3>Your posts</h3>
    <a href="/admin/add-post/page" class="button">+ Add New</a>
</div>

<ul class="admin-posts">

    <% data.forEach(post=> { %>

        <li>
            <a href="/post/<%= post._id %>">
                <%= post.title %> &nearr;
            </a>
            <div class="admin-post-controls">
                <a href="/admin/edit-post/page/<%= post._id %>" class="btn">Edit</a>

                <form action="/admin/delete-post/<%= post._id %>?_method=DELETE" method="POST">
                    <input type="submit" value="Delete" class="btn-delete btn">
                </form>

            </div>

        </li>

        <% }) %>
</ul>